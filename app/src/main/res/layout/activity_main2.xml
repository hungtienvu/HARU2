<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nguyenthanhvy.haru2.Main2Activity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shit"
        android:layout_below="@+id/m_and_y"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:background="@color/green1"
        android:textColor="@android:color/background_light"
        android:text="Shit That Hast be done today "
        android:onClick="openTextArea" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:id="@+id/day"
        android:text="88" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wkd"
        android:text="Tuesday"
        android:layout_marginTop="0dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/day" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/m_and_y"
        android:text="Tuesday"
        android:layout_below="@+id/wkd"
        android:layout_toEndOf="@+id/day" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/family"
        android:layout_marginTop="12dp"
        android:background="@color/green1"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/grateful"
        android:layout_alignParentStart="true"
        android:text="did I care for my family today" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spend"
        android:layout_marginTop="15dp"
        android:background="@color/green1"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/shit"
        android:layout_alignParentStart="true"
        android:text="How much money did I spend thoughtlessly" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/getdone"
        android:layout_marginTop="13dp"
        android:background="@color/green1"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/spend"
        android:layout_alignParentStart="true"
        android:text="What did i get done" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/feel"
        android:background="@color/green1"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/getdone"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp"
        android:text="How do you feel today" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/grateful"
        android:layout_marginTop="14dp"
        android:background="@color/green1"
        android:textColor="@android:color/background_light"
        android:text="What I am grateful for"
        android:layout_below="@+id/feel"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/plans"
        android:background="@color/green1"
        android:textColor="@android:color/background_light"
        android:text="Do you have plans tomorrow"
        android:layout_below="@+id/family"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/better"
        android:background="@color/green1"
        android:textColor="@android:color/background_light"
        android:text="How can I make tomorrow better"
        android:layout_below="@+id/plans"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

</RelativeLayout>
